<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoAdiministracao.Dividas"
             BackgroundColor="LightSkyBlue">
    <StackLayout Padding="20" VerticalOptions="Center">
        
        <!-- Header Label -->
        <Label Text="Dividas"
               BackgroundColor="White"
               HorizontalOptions="Center"
               Padding="5" />

        <!-- Form -->
        <Frame BackgroundColor="White" Padding="10" Margin="0,20,0,20">
            <StackLayout>
                <!-- Form Entries -->
                <StackLayout Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Text="Nome:" WidthRequest="100"/>
                    <Entry x:Name="NameEntry" HorizontalOptions="FillAndExpand"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal">
                    <Label Text="Valor:" WidthRequest="100"/>
                    <Entry x:Name="ValueEntry" HorizontalOptions="FillAndExpand"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal">
                    <Label Text="Data:" WidthRequest="100"/>
                    <Entry x:Name="DateEntry" HorizontalOptions="FillAndExpand"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal">
                    <Label Text="Produto:" WidthRequest="100"/>
                    <Entry x:Name="ProductEntry" HorizontalOptions="FillAndExpand"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal">
                    <Label Text="Quantidade:" WidthRequest="100"/>
                    <Entry x:Name="QuantityEntry" HorizontalOptions="FillAndExpand"/>
                </StackLayout>
                
                <!-- Trash Button -->
                <Button Text="🗑️"
                        HorizontalOptions="End"
                        BackgroundColor="LightSkyBlue"/>
            </StackLayout>
        </Frame>

        <!-- Bottom Form -->
        <Frame BackgroundColor="White" Padding="10" Margin="0,20,0,20">
            <StackLayout>
                <StackLayout Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Text="Nome:" WidthRequest="100"/>
                    <Entry x:Name="NameEntry2" HorizontalOptions="FillAndExpand"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal">
                    <Label Text="Valor:" WidthRequest="100"/>
                    <Entry x:Name="ValueEntry2" HorizontalOptions="FillAndExpand"/>
                </StackLayout>
            </StackLayout>
        </Frame>

        <!-- Bottom Buttons -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20">
            <Button Text="Voltar" BackgroundColor="LightCyan"/>
            <Button Text="+" BackgroundColor="LightSkyBlue"/>
        </StackLayout>
        
    </StackLayout>
</ContentPage>
