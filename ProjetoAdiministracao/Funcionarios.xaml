<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoAdiministracao.Funcionarios"
             BackgroundColor="LightSkyBlue">
    <StackLayout Padding="20" VerticalOptions="Center">
        
        <!-- Header Label -->
        <Label Text="FUNCIONARIOS"
               BackgroundColor="White"
               HorizontalOptions="Center"
               Padding="5" />

        <!-- Form -->
        <Frame BackgroundColor="White" Padding="10" Margin="0,20,0,20">
            <StackLayout>
                <!-- Employee Name -->
                <Label Text="Maria Clara Almeida"
                       BackgroundColor="White"
                       HorizontalOptions="Center"
                       Padding="5" />

                <!-- CPF Entry -->
                <StackLayout Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Text="CPF:" WidthRequest="100"/>
                    <Entry x:Name="CPFEntry" HorizontalOptions="FillAndExpand"/>
                </StackLayout>

                <!-- RG Entry -->
                <StackLayout Orientation="Horizontal">
                    <Label Text="RG:" WidthRequest="100"/>
                    <Entry x:Name="RGEntry" HorizontalOptions="FillAndExpand"/>
                </StackLayout>

                <!-- Work Hours Entry -->
                <StackLayout Orientation="Horizontal">
                    <Label Text="Das:" WidthRequest="100"/>
                    <Entry x:Name="WorkHoursEntry" Placeholder="10 AM as 17 PM" HorizontalOptions="FillAndExpand"/>
                </StackLayout>

                <!-- Function Entry -->
                <StackLayout Orientation="Horizontal">
                    <Label Text="Função:" WidthRequest="100"/>
                    <Entry x:Name="FunctionEntry" HorizontalOptions="FillAndExpand"/>
                </StackLayout>

                <!-- Salary Entry -->
                <StackLayout Orientation="Horizontal">
                    <Label Text="Salario:" WidthRequest="100"/>
                    <Entry x:Name="SalaryEntry" HorizontalOptions="FillAndExpand"/>
                </StackLayout>
                
                <!-- Trash Button -->
                <Button Text="🗑️"
                        HorizontalOptions="End"
                        BackgroundColor="LightSkyBlue"
                        Clicked="OnTrashButtonClicked"/>
            </StackLayout>
        </Frame>

        <!-- Bottom Button -->
        <Button Text="Voltar" BackgroundColor="LightCyan" HorizontalOptions="Center"/>
        
    </StackLayout>
</ContentPage>
