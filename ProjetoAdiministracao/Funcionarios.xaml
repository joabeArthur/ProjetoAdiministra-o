<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoAdiministracao.Funcionarios"
             BackgroundColor="LightSkyBlue">
    <StackLayout Padding="20"
            VerticalOptions="Center">

        <!-- Header Label -->
        <Label Text="FUNCIONARIOS"
               BackgroundColor="White"
               HorizontalOptions="Center"
               Padding="5"/>

        <!-- Form -->
        <Frame BackgroundColor="White"
                Padding="10"
                Margin="0,20,0,20">
            <StackLayout>
                <!-- Employee Name -->
                <Label Text="Name:"
                       HorizontalOptions="FillAndExpand"/>

                <Label x:Name="NameEntry"
                       Text=""
                       BackgroundColor="White"
                       HorizontalOptions="Center"/>

                <!-- CPF Entry -->
                <StackLayout Orientation="Horizontal"
                        Margin="0,10,0,0">
                    <Label Text="CPF:"
                            WidthRequest="100"/>
                    <Label x:Name="CPFEntry"
                            Text=""
                            HorizontalOptions="FillAndExpand"/>
                </StackLayout>

                <!-- RG Entry -->
                <StackLayout Orientation="Horizontal">
                    <Label Text="RG:"
                            WidthRequest="100"/>
                    <Label x:Name="RGEntry"
                            Text=""
                            HorizontalOptions="FillAndExpand"/>
                </StackLayout>

                <!-- Work Hours Entry -->
                <StackLayout Orientation="Horizontal">
                    <Label Text="Das:"
                            WidthRequest="100"/>
                    <Label x:Name="WorkHoursEntry"
                            Text=""
                            HorizontalOptions="FillAndExpand"/>
                </StackLayout>

                <!-- Function Entry -->
                <StackLayout Orientation="Horizontal">
                    <Label Text="Função:"
                            WidthRequest="100"/>
                    <Label x:Name="FunctionEntry"
                            Text="" 
                            HorizontalOptions="FillAndExpand"/>
                </StackLayout>

                <!-- Salary Entry -->
                <StackLayout Orientation="Horizontal">
                    <Label Text="Salario:"
                            WidthRequest="100"/>
                    <Label x:Name="SalaryEntry"
                           Text=""
                            HorizontalOptions="FillAndExpand"/>
                </StackLayout>

                <!-- Trash Button -->
                <Button Text="🗑️"
                        HorizontalOptions="End"
                        BackgroundColor="SkyBlue"
                        Clicked="Apagar"/>
            </StackLayout>
        </Frame>

        <!-- Bottom Button -->
        <Button Text="Voltar"
                BackgroundColor="Cyan"
                HorizontalOptions="Center"
                Clicked="Voltar"/>

    </StackLayout>
</ContentPage>
